<UserControl x:Class="Twill.UI.UserControls.Content.Settings.GeneralPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Twill.UI.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Twill.UI.UserControls.Content.Settings"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:Twill.UI.Core.Models.Content.Settings;assembly=Twill.UI.Core"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Twill.UI;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Twill.UI;component/Styles/ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:EnumToArrayConverter x:Key="EnumToArrayConverter" />

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid d:DataContext="{d:DesignInstance settings:GeneralPageModel, IsDesignTimeCreatable=True}">

        <StackPanel Margin="15">
            
            <Border Margin="0,0,0,10" BorderBrush="Red" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Conservation report format" />

                    <ComboBox  SelectedItem="{Binding ToType, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" ItemsSource="{Binding ToType, Converter={StaticResource EnumToArrayConverter}}" Style="{DynamicResource ComboBoxMainStyle}" />
                
                </Grid>
            </Border> 

        </StackPanel>

    </Grid>
</UserControl>

<UserControl x:Class="Twill.UI.UserControls.Controls.Processes.Monitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Twill.UI.UserControls.Controls.Processes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:monitor="clr-namespace:Twill.UI.Core.Models.Controls.Processes;assembly=Twill.UI.Core"
             d:DesignHeight="300"
             d:DesignWidth="700"
             mc:Ignorable="d">
    <StackPanel d:DataContext="{d:DesignInstance monitor:Monitor, IsDesignTimeCreatable=True}" DataContext="{Binding MonitorModel, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}">

        <TextBlock Text="{Binding ProcessMonitor.LeadTitle}" />
        <TextBlock Text="{Binding ProcessMonitor.Lead.Name}" />

        <ListBox ItemsSource="{Binding ProcessMonitor.Processes}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </StackPanel>
</UserControl>
